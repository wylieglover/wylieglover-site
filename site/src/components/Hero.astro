---
// src/components/Hero.astro
---

<section class="relative min-h-[80vh] flex items-center justify-center overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <!-- Animated Background -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-1/2 -left-1/2 w-full h-full bg-gradient-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-1/2 -right-1/2 w-full h-full bg-gradient-to-tl from-purple-400/20 to-blue-400/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="relative section-container text-center">
    <div class="max-w-3xl mx-auto space-y-8">
      <!-- Profile Image -->
      <div class="flex justify-center mb-8">
        <div class="relative">
          <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-purple-600 rounded-full blur-xl opacity-50 animate-pulse"></div>
          <img 
            src="/images/profile.jpg" 
            alt="Profile" 
            class="relative w-32 h-32 rounded-full object-cover border-4 border-white dark:border-gray-800 shadow-xl"
          />
        </div>
      </div>

      <!-- Main Content -->
      <div class="space-y-4">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight">
          Hi, I'm <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Wylie Glover</span>
        </h1>
        
        <p class="text-xl sm:text-2xl text-gray-600 dark:text-gray-300 font-light">
          Full-Stack Developer & Creative Builder
        </p>
        
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          I design and build websites, apps, and AI experiments that merge technology with creativity.  
          From polished portfolios to autonomous agents, I love turning ambitious ideas into real systems.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center pt-8">
        <a href="/projects" class="btn-primary inline-flex items-center gap-2">
          View My Work
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        
        <a href="/resume" class="btn-secondary inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Download Resume
        </a>
      </div>

      <!-- Skills/Tech Stack -->
      <div class="pt-12">
        <p class="text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-6">Technologies I Work With</p>
        <div class="flex flex-wrap justify-center gap-4">
          {['Next.js', 'Astro', 'TypeScript', 'Node.js', 'Python', 'FastAPI', 'Flutter', 'TailwindCSS', 'PostgreSQL', 'AWS', 'AI/ML'].map(tech => (
            <span class="px-4 py-2 bg-white/50 dark:bg-gray-800/50 backdrop-blur-sm rounded-lg text-sm font-medium border border-gray-200 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-400 transition-colors">
              {tech}
            </span>
          ))}
        </div>
      </div>
    </div>

    <!-- Scroll Indicator (perfectly centered) -->
    <div class="absolute inset-x-0 bottom-2 flex justify-center pointer-events-none">
        <a href="#projects" class="pointer-events-auto animate-bounce">
            <svg class="w-6 h-6 text-gray-400 hover:text-blue-500 transition-colors duration-300"
                fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </a>
    </div>
  </div>
</section>

<style>
  @keyframes pulse {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
