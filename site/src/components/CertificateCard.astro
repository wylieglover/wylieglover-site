---
// src/components/CertificateCard.astro
interface Props {
  title: string;
  issuer: string;
  date: string;
  image: string;
  credentialUrl?: string;
  skills?: string[];
}

const { title, issuer, date, image, credentialUrl, skills = [] } = Astro.props;
---

<article class="card group overflow-hidden h-full flex flex-col hover:scale-105 transition-transform duration-300">
  <!-- Certificate Image -->
  <div class="relative overflow-hidden bg-gray-100 dark:bg-gray-700 aspect-[4/3]">
    <img 
      src={image} 
      alt={`${title} certificate`}
      class="w-full h-full object-contain p-4"
      loading="lazy"
    />
    
    <!-- Verified Badge -->
    <div class="absolute top-4 right-4">
      <div class="bg-green-500 text-white p-2 rounded-full shadow-lg">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6 flex-grow flex flex-col">
    <div class="mb-4">
      <h3 class="text-lg font-semibold mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {title}
      </h3>
      
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-1">
        {issuer}
      </p>
      
      <p class="text-sm text-gray-500 dark:text-gray-500">
        {date}
      </p>
    </div>

    <!-- Skills -->
    {skills.length > 0 && (
      <div class="mb-4">
        <p class="text-xs text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-2">Skills</p>
        <div class="flex flex-wrap gap-2">
          {skills.map(skill => (
            <span class="px-2 py-1 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-300 text-xs rounded">
              {skill}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- View Credential Button -->
    {credentialUrl && (
      <div class="mt-auto">
        <a 
          href={credentialUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 dark:text-blue-400 hover:underline"
        >
          View Credential
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
          </svg>
        </a>
      </div>
    )}
  </div>
</article>