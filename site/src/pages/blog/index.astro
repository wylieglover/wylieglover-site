---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const ordered = posts.sort(
  (a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<BaseLayout title="Blog - Wylie Glover" description="Thoughts, notes, and experiments I write about.">
  <section class="section-container">
    <h1 class="text-4xl font-bold mb-8">Blog</h1>

    <div class="grid gap-8">
      {ordered.map((post) => (
        <a href={`/blog/${post.slug}/`} class="card block hover:shadow-lg transition">
          {post.data.image && (
            <img src={post.data.image} alt={post.data.title} class="rounded-lg mb-4" />
          )}
          <h2 class="text-2xl font-semibold">{post.data.title}</h2>
          {post.data.description && (
            <p class="text-gray-600 dark:text-gray-400">{post.data.description}</p>
          )}
          <span class="text-sm text-gray-400">
            {post.data.pubDate.toLocaleDateString()}
          </span>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
